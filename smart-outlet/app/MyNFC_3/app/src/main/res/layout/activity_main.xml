<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<ImageView
    android:id="@+id/btnOutlet"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="77dp"
    android:layout_marginRight="77dp"
    android:layout_marginBottom="18dp"
    android:gravity="center"
    android:onClick="changeRelay"
    android:src="@drawable/outlet" />

<ImageView
    android:id="@+id/btnInfo"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="56dp"
    android:layout_marginLeft="56dp"
    android:layout_marginBottom="17dp"
    android:gravity="center"
    android:onClick="getInfo"
    android:src="@drawable/info" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="368dp"
        android:text="@string/info"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/userCode"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:ems="10"
        android:hint="@string/enter_code"
        android:inputType="text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/powerLeft"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-199dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/timeUsed"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-236dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/relayState"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-274dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/serverMessage"
        android:layout_width="344dp"
        android:layout_height="42dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-159dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/nfc_id"
        android:layout_width="341dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-319dp"
        android:textSize="18sp" />

</RelativeLayout>
